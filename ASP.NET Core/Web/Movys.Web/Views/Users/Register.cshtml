@model Movys.Web.ViewModels.Users.RegisterInputModel

<div id="preloader">
    <div class="login-content">
        <img class="logo" src="~/images/logo1.png" alt="" width="119" height="58">
        <br />
        <br />
        <h3>Register</h3>
        <br />
        <form method="post">
            <div class="row">
                <label>
                    <!--pattern="^[a-zA-Z][a-zA-Z0-9-_\.]{8,20}$"-->
                    <input type="text" asp-for="Username" placeholder="Username" required="required" />
                </label>
            </div>
            <br />
            <div class="row">
                <label>
                    <!--pattern="(?=^.{8,} $)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"-->
                    <input type="email" asp-for="Email" placeholder="Email" required="required" />
                </label>
            </div>
            <br />
            <div class="row">
                <label>
                    <!--pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"-->
                    <input type="password" asp-for="Password" placeholder="Password" required="required" />
                </label>
            </div>
            <br />
            <div class="row">
                <label>
                    <!--pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"-->
                    <input type="password" asp-for="ConfirmPassword" placeholder="Re-Type Password" required="required" />
                </label>
            </div>
            <br />
            <p><span asp-validation-for="Username"></span></p>
            <p><span asp-validation-for="Email"></span></p>
            <p><span asp-validation-for="Password"></span></p>
            <p><span asp-validation-for="ConfirmPassword"></span></p>

            <br />
            <div class="row">
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
</div>