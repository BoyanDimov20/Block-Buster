@model Movys.Web.ViewModels.Celebs.ListingCelebsViewModel

<div class="hero common-hero">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hero-ct">
                    <h1>celebrity listing - list</h1>
                    <ul class="breadcumb">
                        <li class="active"><a href="#">Home</a></li>
                        <li> <span class="ion-ios-arrow-right"></span> celebrity listing</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- celebrity list section-->
<div class="page-single">
    <div class="container">
        <div class="row ipad-width2">
            <div class="col-md-9 col-sm-12 col-xs-12">
                <div class="topbar-filter">
                    <p class="pad-change">Found <span>@Model.CelebsCount celebrities</span> in total</p>
                    
                    <a class="list"><i class="ion-ios-list-outline active"></i></a>
                    <a asp-controller="Celebs" asp-action="ListingMostPopularGrid" class="grid"><i class="ion-grid "></i></a>
                </div>
                <div class="row">
                    @foreach (var celeb in Model.CastMembers)
                    {
                        <div class="col-md-12">
                            <div class="ceb-item-style-2">
                                <img src="@celeb.ImageUrl" style="width:100px;height:130px;" alt="">
                                <div class="ceb-infor">
                                    <h2><a asp-controller="Celebs" asp-action="ById" asp-route-id="@celeb.Id">@celeb.Name</a></h2>
                                    <span>@string.Join(", ", celeb.Movies.Select(x => x.RoleType).Distinct()), @celeb.CountryBornIn</span>
                                    <p>@celeb.Description... </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="topbar-filter">
                    <label>Reviews per page:</label>
                    <select>
                        <option value="range">36 Reviews</option>
                        <option value="saab">18 Reviews</option>
                    </select>

                    <div class="pagination2">
                        <span>Page 1 of 6:</span>
                        <a class="active" href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#">4</a>
                        <a href="#">5</a>
                        <a href="#">6</a>
                        <a href="#"><i class="ion-arrow-right-b"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-xs-12 col-sm-12">
                <div class="sidebar">
                    <div class="searh-form">
                        <h4 class="sb-title">Search celebrity</h4>
                        @await Html.PartialAsync("_CelebsSearchFormPartial", Model.SearchInputModel)
                    </div>
                    <div class="ads">
                        <img src="images/uploads/ads1.png" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>