
@model Movys.Web.ViewModels.Celebs.SingleCelebViewModel

<div class="hero hero3">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- <h1> movie listing - list</h1>
                <ul class="breadcumb">
                    <li class="active"><a href="#">Home</a></li>
                    <li> <span class="ion-ios-arrow-right"></span> movie listing</li>
                </ul> -->
            </div>
        </div>
    </div>
</div>
<!-- celebrity single section-->

<div class="page-single movie-single cebleb-single">
    <div class="container">
        <div class="row ipad-width">
            <div class="col-md-4 col-sm-12 col-xs-12">
                <div class="mv-ceb">
                    <img src="@Model.ImageUrl" width="200" height="200" alt="">
                </div>
            </div>
            <div class="col-md-8 col-sm-12 col-xs-12">
                <div class="movie-single-ct">
                    <h1 class="bd-hd">@Model.Name</h1>
                    <p class="ceb-single">@string.Join(" | ", Model.Movies.Select(x => x.RoleType).Distinct())</p>
                    <div class="social-link cebsingle-socail">
                        <a href="@Model.FacebookUrl"><i class="ion-social-facebook"></i></a>
                        <a href="@Model.TwitterUrl"><i class="ion-social-twitter"></i></a>
                        <a href="#"><i class="ion-social-googleplus"></i></a>
                        <a href="#"><i class="ion-social-linkedin"></i></a>
                    </div>
                    <div class="movie-tabs">
                        <div class="tabs">
                            <ul class="tab-links tabs-mv">
                                <li class="active"><a href="#overviewceb">Overview</a></li>
                                <li><a href="#biography"> biography</a></li>
                                <li><a href="#filmography">filmography</a></li>
                            </ul>
                            <div class="tab-content">
                                <div id="overviewceb" class="tab active">
                                    <div class="row">
                                        <div class="col-md-8 col-sm-12 col-xs-12">
                                            <p>
                                                @(Model.ShortBiography)...
                                            </p>
                                            <p></p>
                                            <p class="time"><a href="#">See full bio <i class="ion-ios-arrow-right"></i></a></p>
                                            <div class="title-hd-sm">
                                                <h4>filmography</h4>
                                                <a href="#" class="time">Full Filmography<i class="ion-ios-arrow-right"></i></a>
                                            </div>
                                            <!-- movie cast -->
                                            <div class="mvcast-item">
                                                @foreach (var movie in Model.Movies)
                                                {
                                                    <div class="cast-it">
                                                        <div class="cast-left cebleb-film">
                                                            <img src="@movie.MovieImageUrl" width="40" height="40" alt="">
                                                            <div>
                                                                <a asp-controller="Movies" asp-action="ById" asp-route-id="@movie.MovieId">@movie.MovieTitle</a>
                                                                <p class="time">@movie.RoleName</p>
                                                            </div>

                                                        </div>
                                                        <p>...  @movie.MovieReleaseYear</p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-md-4 col-xs-12 col-sm-12">
                                            <div class="sb-it">
                                                <h6>Fullname:  </h6>
                                                <p><a asp-controller="Celebs" asp-action="ById" asp-route-id="@Model.Id">@Model.Name</a></p>
                                            </div>
                                            <div class="sb-it">
                                                <h6>Date of Birth: </h6>
                                                <p>@Model.BornInfo</p>
                                            </div>
                                            <div class="sb-it">
                                                <h6>Country:  </h6>
                                                <p>@Model.CountryBornIn</p>
                                            </div>
                                            <div class="sb-it">
                                                <h6>Height:</h6>
                                                <p>@Model.Height cm</p>
                                            </div>
                                            <div class="ads">
                                                <img src="~/images/uploads/ads1.png" alt="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="biography" class="tab">
                                    <div class="row">
                                        <div class="rv-hd">
                                            <div>
                                                <h3>Biography of</h3>
                                                <h2>@Model.Name</h2>
                                            </div>
                                        </div>
                                        <p>@Model.FullBiography</p>
                                        <p></p>
                                        <p></p>
                                        <p></p>
                                    </div>
                                </div>
                                <div id="mediaceb" class="tab">
                                    <div class="row">
                                        <div class="rv-hd">
                                            <div>
                                                <h3>Biography of</h3>
                                                <h2>@Model.Name</h2>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div id="filmography" class="tab">
                                    <div class="row">
                                        <div class="rv-hd">
                                            <div>
                                                <h3>Filmography of</h3>
                                                <h2>@Model.Name</h2>
                                            </div>

                                        </div>
                                        <div class="topbar-filter">
                                            <p>Found <span>@Model.Movies.Count() movies</span> in total</p>
                                        </div>
                                        <!-- movie cast -->
                                        <div class="mvcast-item">
                                            @foreach (var movie in Model.Movies)
                                            {
                                                <div class="cast-it">
                                                    <div class="cast-left cebleb-film">
                                                        <img src="@movie.MovieImageUrl" width="40" height="40" alt="">
                                                        <div>
                                                            <a asp-controller="Movies" asp-action="ById" asp-route-id="@movie.MovieId">@movie.MovieTitle </a>
                                                            <p class="time">@movie.RoleName</p>
                                                        </div>

                                                    </div>
                                                    <p>...  @movie.MovieReleaseYear</p>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- celebrity single section-->